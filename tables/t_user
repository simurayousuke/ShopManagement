create table t_user
(
	id serial not null
		constraint t_user_pkey
			primary key,
	username varchar(20) not null,
	salt varchar(32) not null,
	pwd varchar(64) not null,
	uuid varchar(32) not null,
	avator integer default 0 not null,
	phone varchar(11)
)
;

create unique index t_user_username_uindex
	on t_user (username)
;


